<view>
  <view class="data">
    <view class="data-head">
      <image src="{{reviseImg}}"></image>
    </view>
    <view class="data-text">
      <text class="data-text-name" style='display:{{nameDisplay == 1 ? "none": "block"}}'>{{name}}</text>
      <input class="data-text-name" style='display:{{nameDisplay == 0 ? "none": "block"}};background-color:#fafafa;' value='{{name}}'  bindinput="bindKeyInput"></input>
    <text class="data-text-verification" style='display:{{nameDisplay == 1 ? "none": "inline-block"}}' bindtap='{{toIdentity}}'>{{verification}}</text>
    </view>
    <view class="data-revise" bindtap='revise' style='display:{{nameDisplay == 1 ? "none": "block"}}'>
      <image src="../image/编辑.svg"></image>
    </view> 
    <view class="data-define" bindtap='define' style='display:{{nameDisplay == 0 ? "none": "block"}}'>
      <image src="../image/填充选项框(确定).svg"></image>
    </view> 
  </view>

  <view class="supplement" bindtap='toSupplement'  style='display:{{certification == 1 ? "-":"none"}}'>
    <image src="../image/补充信息.svg"></image>
    <text>补充认证信息</text>
  </view>
  <view class="title">
    <text><text style='color:#2581ff;'>▍</text>我们服务</text>
  </view>
  <view class="action">
    <view class="action-item" bindtap='toNews' style='border-right:1rpx solid #f4f4f4;border-bottom:1rpx solid #f4f4f4;'>
      <image src="../image/消息.svg"></image>
      <text>消息</text>
    </view>
    <view class="action-item" bindtap='toPublish' style='border-right:1rpx solid #f4f4f4;border-bottom:1rpx solid #f4f4f4;'>
      <image src="../image/我的发布.svg"></image>
      <text>我的发布</text>
    </view>
    <view class="action-item" bindtap='toCollect' style='border-bottom:1rpx solid #f4f4f4;'>
      <image src="../image/收藏.svg"></image>
      <text>我的收藏</text>
    </view>
    <view class="action-item" bindtap='toHelp' style='border-right:1rpx solid #f4f4f4;'>
      <image src="../image/help.svg"></image>
      <text>关于我们</text>
    </view>  
    <view class="action-item"  style='border-right:1rpx solid #f4f4f4;'>
      <!-- <image src="../image/help.svg"></image>
      <text>关于我们</text> -->
    </view>   
  </view>
  <view class="title">
    <text><text style='color:#2581ff;'>▍</text>第三方服务</text>
  </view>
   <view class="action">
    <view class="action-item" bindtap='toNews'>
      <image src="../image/help.svg"></image>
      <text>财富牧场</text>
    </view>    
  </view>
</view>