<view>
  <view class="data">
    <view class="data-head">
      <image src="../image/WechatIMG35.jpeg"></image>
    </view>
    <view class="data-text">
      <text class="data-text-name" style='display:{{nameDisplay == 1 ? "none": "block"}}'>{{name}}</text>
      <input class="data-text-name" style='display:{{nameDisplay == 0 ? "none": "block"}};background-color:#fafafa;' value='{{name}}' focus="{{focus}}" auto-focus bindinput="bindKeyInput"></input>
      <text class="data-text-verification" style='display:{{nameDisplay == 1 ? "none": "inline-block"}}' bindtap='toIdentity'>验证身份</text>
    </view>
    <view class="data-revise" bindtap='revise' style='display:{{nameDisplay == 1 ? "none": "block"}}'>
      <image src="../image/编辑.svg"></image>
    </view> 
    <view class="data-define" bindtap='define' style='display:{{nameDisplay == 0 ? "none": "block"}}'>
      <image src="../image/填充选项框(确定).svg"></image>
    </view> 
  </view>

  <view class="supplement" bindtap='toSupplement'>
    <image src="../image/help.svg"></image>
    <text>补充认证信息</text>
  </view>
  <view class="title">
    <text>丨我们服务</text>
  </view>
  <view class="action">
    <view class="action-item" bindtap='toNews'>
      <image src="../image/help.svg"></image>
      <text>消息</text>
    </view>
    <view class="action-item" bindtap='toPublish'>
      <image src="../image/help.svg"></image>
      <text>我的发布</text>
    </view>
    <view class="action-item" bindtap='toCollect'>
      <image src="../image/help.svg"></image>
      <text>我的收藏</text>
    </view>
    <view class="action-item" bindtap='toHelp'>
      <image src="../image/help.svg"></image>
      <text>关于我们</text>
    </view>    
  </view>
  <view class="title">
    <text>丨第三方服务</text>
  </view>
   <view class="action">
    <view class="action-item" bindtap='toNews'>
      <image src="../image/help.svg"></image>
      <text>财富牧场</text>
    </view>    
  </view>
</view>