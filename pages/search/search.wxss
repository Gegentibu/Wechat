/* pages/search/search.wxss */
.sort{
    display: inline-flex;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
}
.sort-category{
    display: inline-flex;
    width: 649rpx;
    align-items:center;
    border-right: 1rpx solid #e6e6e6;
}
.sort-category text{
    display: block;
    width: 324rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    border-left: 1rpx solid #e6e6e6;
}
.sort-attestation{
    width: 100rpx;
    height: 90rpx;
    text-align: center;
}
.sort-attestation image{
  width: 40rpx;
  height: 40rpx;
}
.sort-attestation text{
    display: block;
    font-size: 20rpx;
}
.attestation,.category{
  display: flex;
  flex-wrap:wrap;
  width: 720rpx;
  padding: 15rpx;
}
.category view,.attestation view{
  display: block;
  width: 100rpx;
  margin: 5rpx;
  padding: 10rpx 15rpx;
   border: 1rpx solid #e6e6e6; 
  text-align: center;
}
.attestation .active-tag,.category .active-tag{
  border: 1rpx solid #2581ff;
  color:#2581ff;
}
.search-car{
    height: 100rpx;
    line-height: 100rpx;
    background-color: #ffffff;
    border-bottom: 1rpx solid #e6e6e6;
}
.search-english{
    height: 40rpx;
    background-color: #f0f0f0;
    line-height: 40rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #000000;
}
scroll-view{
    z-index: 20;
}
image{
    height: 75rpx;
    width: 75rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 10rpx;
}
.index-english{
    position: absolute;
    width: 30rpx;
    height: auto;
    right: 0;
    font-size: 10px;
}
.index-english view{
    height: 18px;
}
.index-name{
    text-align: center;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #000000;
    width: 100px;
    height: 100px;
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 100px;
}