/* pages/search/search.wxss */
.sort{
  height: 70rpx;
    display: inline-flex;
    border-top: 1rpx solid #f4f4f4;
    border-bottom: 1rpx solid #f4f4f4;
    font-size: 30rpx;
}
.sort-category{
    display: inline-flex;
    width: 649rpx;
    align-items:center;
    border-right: 1rpx solid #f4f4f4;
}
.sort-category view{
    display: block;
    width: 324rpx;
     height: 70rpx; 
    text-align: center;
     line-height: 70rpx; 
    border-left: 1rpx solid #f4f4f4;
}
.sort-category image{
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}

.sort-attestation{
    width: 100rpx;
    /* height: 90rpx; */
    text-align: center;
}
.sort-attestation image{
  width: 30rpx;
  height: 30rpx;
}
.sort-attestation text{
    display: block;
    font-size: 20rpx;
    color: #b0b0b0;
}
.attestation,.category{
  display: flex;
  flex-wrap:wrap;
  width: 720rpx;
  padding: 15rpx;
}
.category view,.attestation view{
  display: block;
  width: 100rpx;
  margin: 5rpx;
  padding: 10rpx 15rpx;
   border: 1rpx solid #f4f4f4; 
  text-align: center;
}
.attestation .active-tag,.category .active-tag{
  border: 1rpx solid #2581ff;
  color:#2581ff;
}
.search-car{
  font-size: 34rpx;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #ffffff;
    border-bottom: 1rpx solid #f4f4f4;
    display: flex;
    align-items: center;
}
.search-english{
    height: 60rpx;
    background-color: #fafafa;
    line-height: 60rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #000000;
}
scroll-view{
    z-index: 20;
}
.search-car image{
    height: 100rpx;
    width: 100rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 10rpx 20rpx 10rpx 30rpx; 
    border: 1rpx solid #f4f4f4;
}
.index-english{
    position: fixed;
    width: 40rpx;
    height: auto;
    right: 0;
    font-size: 10px;
    text-align: center;
    border: 1rpx solid #f4f4f4;
}
.index-english view{
    height: 23px;
}
.index-name{
    text-align: center;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #000000;
    width: 100px;
    height: 100px;
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 100px;
}
 .box{
  width: 100%;
  position: fixed;
  top:0;
  z-index: 10;
  background: #fff;
} 