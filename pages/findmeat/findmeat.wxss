/* pages/search/search.wxss */
@import '../brand/brand.wxss';
.sort_{
    display: inline-flex;
    border-top: 1rpx solid #e6e6e6;
    /* border-bottom: 1rpx solid #e6e6e6; */
    background-color: #fff;
    font-size: 30rpx;
}
.sort-category{
    display: inline-flex;
    flex-wrap:wrap;
    width: 648rpx;
    height: 140rpx;
    align-items:center;
    border-right: 1rpx solid #e6e6e6;
}
.sort-category view{
    display: block;
    width: 214rpx; 
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    border-left: 1rpx solid #e6e6e6;
}
.sort-attestation{
    display: inline-flex;
    width: 100rpx;
    height: 140rpx;
    text-align: center;
    align-content:center;
    align-items: stretch;
    justify-content:center;
    flex-wrap:wrap;
    border-bottom: 1rpx solid #e6e6e6;
}
.sort-attestation image{
  width: 50rpx;
  height: 50rpx;
}
.sort-attestation text{
    display: block;
    font-size: 20rpx;
}
.attestation,.category{
  display: flex;
  flex-wrap:wrap;
  width: 720rpx;
  padding: 15rpx;
  background-color: #fff;
}
.category view,.attestation view{
  display: block;
  width: 100rpx;
  margin: 5rpx;
  padding: 10rpx 15rpx;
   border: 1rpx solid #e6e6e6; 
  text-align: center;
}
.attestation .active-tag,.category .active-tag{
  border: 1rpx solid #2581ff;
  color:#2581ff;
}
.search-car{
    height: 120rpx;
    font-size: 34rpx;
    line-height: 120rpx;
    /* background-color: #ffffff; */
    border-bottom: 1rpx solid #e6e6e6; 
}

.search-english{
    height: 60rpx;
    background-color: #f0f0f0;
    line-height: 60rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #000000;
    margin-top: 4rpx;
}
scroll-view{
    z-index: 20;
}
image{
    height: 75rpx;
    width: 75rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 10rpx;
}
.index-english{
    position: fixed;
    width: 30rpx;
    height: auto;
    right: 0;
    font-size: 10px;
}
.index-english view{
    height: 18px;
}
.index-name{
    text-align: center;
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #000000;
    width: 100px;
    height: 100px;
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.4);
    line-height: 100px;
}
.filter{
    display: flex;
    justify-content: space-between;
}
 .box{
  width: 100%;
  position: fixed;
  top:0;
  z-index: 10;
  background: #fff;
} 
.brand_id{
  font-size: 22rpx;
  color: #000;
  text-align: right;
}